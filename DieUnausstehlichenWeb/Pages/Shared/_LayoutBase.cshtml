@using DieUnausstehlichenWeb.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="The 'Die Unausstehlichen' website.">
    <title>@ViewData["Title"] - Die Unausstehlichen Web</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>

<div class="main">
    <div class="header">
        <a class="header-title header-element" href="@Url.Page("/Index")">die unausstehlichen</a>
        <div class="header-items header-element">

            @{
                var quickLinks = new Dictionary<string, string>
                {
                    ["Privacy"] = Url.Page("/Privacy"),
                    ["Text"] = Url.Page("/Text"),
                    ["Minecraft"] = Url.Page("/Minecraft/Index")
                };
            }
            @foreach (var (name, url) in quickLinks)
            {
                <a href="@url">@name</a>
                @if (quickLinks.Last().Key != name)
                {
                    <span class="header-item-glyph"> ¦ </span>
                }
            }
        </div>
    </div>
    <div class="content-container">
        @RenderBody()
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>